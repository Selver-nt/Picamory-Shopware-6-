{% sw_extends '@Storefront/storefront/page/checkout/address/index.html.twig' %}

{% block base_header %}
    <header class="header-main">
        {% block base_header_inner %}
            {% sw_include '@Storefront/storefront/layout/header/header.html.twig' %}
        {% endblock %}
    </header>
{% endblock %}

{% block base_navigation %}
    <div class="container">
        <h1 class="text-center main-heading-checkout">
            Complete the Purchase
        </h1>
    </div>
{% endblock %}

{% block page_checkout_address_product_list_container %}
    <div class="d-flex justify-content-end">
        <div class="quantity">{{ "checkout.cartHeaderQuantity"|trans }}</div>
        <div>Total</div>
    </div>
    {{ parent() }}
{% endblock %}


{% block page_checkout_address_login_toggle %}
    <div class="register-login-collapse-toogle">
        {% sw_icon 'acc-checkout' style { 'pack': 'sha' } %}
        <a href="#loginCollapse"
            class="login-collapse-toggle"
            data-toggle="collapse"
            aria-expanded="false">
            <strong>{{ "checkout.addressLoginToggle"|trans|sw_sanitize }}</strong> </a>
    </div>
{% endblock %}
    