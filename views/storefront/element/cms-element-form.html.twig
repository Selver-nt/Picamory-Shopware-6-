{% block element_form %}
<div class="container form-main-container">
    {%  set config = element.fieldConfig.elements %}
        <div class="cms-element-{{ element.type }}">
            <div class="row justify-content-center">
                <div class="col-lg-12 form-contact">

                    {% set formViolations = app.request.get('errors') %}

                    <div class="card">
                        <div class="card-body">
                            {% block element_form_wrapper %}
                                {% if element.config.type.value is same as('contact') %}
                                    {% block element_form_contact_form_title %}
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        
                                        <li class="nav-item">
                                            <a href="{{ path('frontend.account.home.page') }}"
                                                title="{{ "account.overviewLink"|trans|striptags }}"
                                                class="list-group-item list-group-item-action account-aside-item{% if activeRoute is same as('frontend.account.home.page') %} is-active{% endif %}">
                                                {% sw_icon 'settings' style { 'pack': 'picagram' } %}
                                                <span class="d-none d-lg-inline">Einstellungen</span>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="{{ path('frontend.account.order.page') }}"
                                                title="{{ "account.ordersLink"|trans|striptags }}"
                                                class="list-group-item list-group-item-action account-aside-item{% if activeRoute is same as('frontend.account.order.page') %} is-active{% endif %}">
                                                {% sw_icon 'shopping-outline' style { 'pack': 'picagram' } %}
                                                <span class="d-none d-lg-inline">Meine Bestellungen</span>
                                            </a>
                                        </li>
                            
                                        
                                        <li class="nav-item">
                                            <a href="/Contact/"
                                                title="{{ "account.ordersLink"|trans|striptags }}"
                                                class="list-group-item list-group-item-action account-aside-item{% if activeRoute is same as('frontend.account.order.page') %} is-active{% endif %}">
                                                {% sw_icon 'help' style { 'pack': 'picagram' } %}
                                                <span class="d-none d-lg-inline">Contact</span>
                                            </a>
                                        </li>
                                    </ul>
                                        <div class="container p-0">
                                            
                                            <h1 class="text-center form-headline">Wie können wir dir helfen?</h1>
                                            <p class="text-center form-text">Bei Fragen, Anregungen oder Feedback stehen wir dir gerne zur Verfügung. Schick uns einfach eine Nachricht.</p>
                                        </div>
                                    {% endblock %}

                                    {% block element_form_contact_form_form %}
                                        {% sw_include '@Storefront/storefront/element/cms-element-form/form-types/contact-form.html.twig'
                                            with {
                                                action: 'frontend.form.contact.send',
                                                submitText: 'contact.formSubmit'
                                            }
                                        %}
                                    {% endblock %}
                                {% elseif element.config.type.value is same as('newsletter') %}
                                    {% block element_form_newsletter_form_title %}
                                        <div class="card-title mb-4">
                                            {% if element.config.title.value %}
                                                {{ element.config.title.value }}
                                            {%  else %}
                                                {{ "newsletter.headline"|trans }}
                                            {% endif %}
                                        </div>
                                    {% endblock %}

                                    {% block element_form_newsletter_form_form %}{% endblock %}
                                {% endif %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
</div>
   
